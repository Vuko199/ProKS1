
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProKS1.Views.PasswordPromptWindow"
        Title="Podaj hasło" Width="340" Height="160"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*">
    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Aby usunąć, podaj hasło:"/>
    <TextBlock Grid.Row="1" Text="Hasło:" VerticalAlignment="Center" Margin="0,8,8,0"/>
    <TextBox x:Name="Pwd" Grid.Row="1" Grid.Column="1" Margin="0,8,0,0" PasswordChar="*"/>
    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="OK" x:Name="OkBtn"/>
      <Button Content="Anuluj" x:Name="CancelBtn"/>
    </StackPanel>
  </Grid>
</Window>
